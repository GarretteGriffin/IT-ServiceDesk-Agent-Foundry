# Azure AI Foundry
AZURE_AI_PROJECT_ENDPOINT=https://<your-project>.api.azureml.ms
AZURE_AI_MODEL_DEPLOYMENT=gpt-5
AZURE_TENANT_ID=<your-tenant-id>
AZURE_SUBSCRIPTION_ID=<your-subscription-id>
AZURE_RESOURCE_GROUP=rg-it-agent

# Azure AI Search (RAG)
AZURE_SEARCH_ENDPOINT=https://<your-search>.search.windows.net
AZURE_SEARCH_INDEX_NAME=it-knowledge-base
AZURE_SEARCH_API_VERSION=2023-11-01

# Microsoft Graph API
GRAPH_CLIENT_ID=<app-registration-client-id>
GRAPH_CLIENT_SECRET=<secret>
GRAPH_TENANT_ID=<tenant-id>
GRAPH_SCOPES=User.ReadWrite.All,Group.ReadWrite.All,Directory.ReadWrite.All

# ServiceNow
SERVICENOW_INSTANCE=<instance>.service-now.com
SERVICENOW_CLIENT_ID=<client-id>
SERVICENOW_CLIENT_SECRET=<secret>
SERVICENOW_USERNAME=<username>
SERVICENOW_PASSWORD=<password>

# Active Directory
AD_DOMAIN=atlasroofing.com
AD_SERVER=dc01.atlasroofing.com
AD_BASE_DN=DC=atlasroofing,DC=com
AD_SERVICE_ACCOUNT=svc-agent@atlasroofing.com
AD_SERVICE_PASSWORD=<stored-in-key-vault>

# Azure Automation (PowerShell execution)
AUTOMATION_ACCOUNT_NAME=automation-it-ops
AUTOMATION_RESOURCE_GROUP=rg-automation
AUTOMATION_SUBSCRIPTION_ID=<subscription-id>

# Azure Key Vault
KEY_VAULT_URL=https://<your-keyvault>.vault.azure.net

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=<key>;IngestionEndpoint=https://eastus-8.in.applicationinsights.azure.com/

# Agent Configuration
AGENT_NAME=IT Service Desk Agent
AGENT_INSTRUCTIONS_FILE=./config/agent_instructions.txt
MAX_CONVERSATION_HISTORY=20
DEFAULT_TEMPERATURE=0.7
ENABLE_STREAMING=true

# Security
ALLOWED_ORIGINS=https://teams.microsoft.com,https://portal.azure.com
API_KEY_HEADER=X-API-Key
ENABLE_AUTH=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
